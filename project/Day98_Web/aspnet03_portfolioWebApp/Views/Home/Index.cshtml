@model IEnumerable<aspnet03_portfolioWebApp.Models.PortfolioModel>;

@{
    ViewData["Title"] = "홈";
}

<!-- Shared밑에 있는 _Notification.cshtml을 index.cshtml에 포함시킴 -->
<partial name="_Notification" />

<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">Man must explore, and this is exploration at its greatest</h2>
                    <h3 class="post-subtitle">Problems look mighty small from 150 miles up</h3>
                </a>
                <p class="post-meta">
                    Posted by
                    <a href="#!">Start Bootstrap</a>
                    on September 24, 2023
                </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
            <div class="post-preview">
                <a>
                @if (Model.Count() > 0)
                {
                    var loop = 1;
                    foreach (var item in Model)
                    {
                        if (loop % 2 == 1)
                        {   // 홀수이면
                            @Html.Raw("<div class=\"item\">")
                        }
                        // 동적으로 포트폴리오 이미지 객체를 만들어 주는 파트
                        @Html.Raw("<div class=\"portfolio-item\">" +
                                "  <div class=\"thumb\">" +
                                $"    <img src=\"/uploads/{item.FileName}\" width='445' height='305'>" +
                                "    <div class=\"hover-content\">" +
                                "      <div class=\"inner-content\">" +
                                $"        <a href=\"{item.Url}\" target='_blank'><h4>{item.Title}</h4></a>" +
                                $"        <span>{item.Description}</span>" +
                                "      </div>"+
                                "    </div>" +
                                "  </div>" +
                                "</div>")

                        if (loop % 2 == 0)
                        {
                            //짝수이면
                            @Html.Raw("</div>")
                        }

                        loop++;
                    }
                }
                </a>
            </div>
        </div>
    </div>
</div>